<div class="container">
  <div class="row">
    <div class="col-md-4" >
      <div class="panel panel-primary">
        <div class="panel-heading"><%= link_to @request.header , @request %></div>
          <div class="panel-body">
            <%= form_for @request do |f|%>
              <div class="form-group">
                <label for="content"><%= t "views.requests.new.topic" %></label><br>
                <%= f.select :topic, Request.topics.map { |key, value| [key.humanize, key] }, {}, {class: "form-control"} %>
              </div>

              <div class="form-group">
                <label for="example-text-input" class="col-2 col-form-label"><%= t "views.requests.new.header" %></label>
                <%= f.text_field :header, class: "form-control"%>
              </div>

              <div class="form-group">
                <label for="content"><%= t "views.requests.new.content" %></label><br>
                <%= f.text_area :content, class: "form-control" %>
              </div>

                <label for="bill"><%= t "views.requests.new.bill" %></label><br>

              <div class="input-group">
                <%= f.text_field :bill, class: "form-control"%>
                <span class="input-group-addon" id="basic-addon2">VNƒê</span>
              </div>
              <br>

              <%= f.submit t("views.requests.new."), class: "btn btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
