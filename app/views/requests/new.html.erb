<div class="container">
  <h1 class="text-center" ><%= t "views.layouts.header.create_request" %></h1>
  <%= form_for @request_user do |f|%>
    <div class="form-group">
      <label for="content"><%= t "views.requests.new.topic" %></label><br>
      <%= f.select :topic, Request.topics.map { |key, value| [key.humanize, key] }, {}, {class: "form-control"} %>
    </div>

    <div class="form-group">
      <label for="example-text-input" class="col-2 col-form-label"><%= t "views.requests.new.header" %></label>
      <%= f.text_field :header, required: true, class: "form-control"%>
    </div>
    <div class="form-group">
      <label for="content"><%= t "views.requests.new.content" %></label><br>
      <%= f.text_area :content, required: true, class: "form-control" %>
    </div>
      <label for="bill"><%= t "views.requests.new.bill" %></label><br>
    <div class="input-group">
      <%= f.text_field :bill, required: true, class: "form-control" , style: "height: 20%"%>
      <span class="input-group-addon" id="basic-addon2">VNƒê</span>
    </div>
    <br>
    <% if user_signed_in? %>
      <%= f.submit "Submit",class: "btn btn-success" %>
    <% else %>
      <a href="#loginModal" data-toggle="modal" id="login-button" class="btn btn-success"><%= t "views.requests.new.submit" %></a>
    <% end %>
  <% end %>
</div>
<%= javascript_include_tag "validate_request" %>
<%= render "layouts/form_login" %>
